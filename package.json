{
  "name": "remember-mcp-vscode",
  "icon": "media/remember-new-logo-letter-black-128.png",
  "displayName": "Remember MCP",
  "description": "A VS Code extension that registers MCP servers with VS Code's built-in MCP system",
  "version": "0.0.6",
  "readme": "README_marketplace.md",
  "publisher": "nickeolofsson",
  "repository": {
    "type": "git",
    "url": "https://github.com/NiclasOlofsson/remember-mcp-vscode"
  },
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "memory",
    "server",
    "copilot"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "mcpServerDefinitionProviders": [
      {
        "id": "remember-mcp-provider",
        "label": "Remember MCP Server"
      }
    ],
    "commands": [
      {
        "command": "remember-mcp.startServer",
        "title": "Register MCP Server",
        "category": "Remember MCP",
        "icon": "$(server-process)"
      },
      {
        "command": "remember-mcp.stopServer",
        "title": "Unregister MCP Server",
        "category": "Remember MCP",
        "icon": "$(stop)"
      },
      {
        "command": "remember-mcp.restartServer",
        "title": "Re-register MCP Server",
        "category": "Remember MCP",
        "icon": "$(refresh)"
      },
      {
        "command": "remember-mcp.showPanel",
        "title": "Show MCP Panel",
        "category": "Remember MCP",
        "icon": "$(window)"
      },
      {
        "command": "remember-mcp.showOutput",
        "title": "Show Output",
        "category": "Remember MCP",
        "icon": "$(output)"
      },
      {
        "command": "remember-mcp.clearUsageStats",
        "title": "Clear Usage Statistics",
        "category": "Remember MCP",
        "icon": "$(clear-all)"
      }
    ],
    "views": {
      "remember-mcp-container": [
        {
          "type": "webview",
          "id": "remember-mcp-usage-panel",
          "name": "Copilot Usage",
          "icon": "media/remember-new-logo-letter-black.svg"
        },
        {
          "type": "webview",
          "id": "remember-mcp-panel",
          "name": "Server Control",
          "icon": "media/remember-new-logo-letter-black.svg"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "remember-mcp-container",
          "title": "Remember MCP",
          "icon": "media/remember-new-logo-letter-black.svg"
        }
      ]
    },
    "configuration": {
      "title": "Remember MCP",
      "properties": {
        "remember-mcp.server.autoStart": {
          "type": "boolean",
          "default": true,
          "description": "Automatically register the MCP server when VS Code starts"
        },
        "remember-mcp.server.pythonPath": {
          "type": "string",
          "default": "python",
          "description": "Path to Python executable (deprecated - use server.command instead)"
        },
        "remember-mcp.server.command": {
          "type": "string",
          "default": "pipx run --system-site-packages --spec git+https://github.com/NiclasOlofsson/mode-manager-mcp.git mode-manager-mcp",
          "description": "Command to run the MCP server (registered with VS Code MCP system)"
        },
        "remember-mcp.tail.pollInterval": {
          "type": "number",
          "default": 10000,
          "minimum": 1000,
          "description": "Polling interval in milliseconds for checking the Copilot log file (default: 10000 ms = 10 seconds)"
        }
      }
    }
  },
  "scripts": {
  "vscode:prepublish": "npm run package",
  "compile": "webpack",
  "watch": "webpack --watch",
  "package": "webpack --mode production --devtool hidden-source-map",
  "compile-tests": "tsc -p . --outDir out",
  "watch-tests": "tsc -p . -w --outDir out",
  "pretest": "npm run compile-tests && npm run compile && npm run lint",
  "lint": "eslint src",
  "test": "vscode-test",
  "bump-version": "npm version patch",
  "package:marketplace": "npm run bump-version && vsce package --readme README_marketplace.md",
  "publish:marketplace": "npm run package:marketplace && vsce publish --readme README_marketplace.md"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.9.2",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  }
}
